<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:state_pressed="true">
        <ripple android:color="@android:color/white">
            <item android:drawable="@drawable/selected_poster_decorator" />
        </ripple>
    </item>

    <!-- When the view is "activated".  Selected in the case of the movie poster view -->
    <item android:state_activated="true"
        android:drawable="@drawable/selected_poster_decorator" />

    <!-- Default, "just hangin' out" state. -->
    <item android:drawable="@android:color/transparent" />
</selector>